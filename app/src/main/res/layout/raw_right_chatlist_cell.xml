        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_RightContact"
            android:backgroundTint="@color/status_color"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitEnd"
            android:clickable="true"
            android:checkable="true"
            android:focusable="true"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            android:layout_marginEnd="22dp"
            android:layout_alignParentEnd="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_RightContactName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginHorizontal="8dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:maxLines="2"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:text="Pdf Name" />

                <TextView
                    android:id="@+id/tv_RightViewAll"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="8dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:maxLines="2"
                    android:text="View All"
                    android:textColor="@color/black"
                    android:textFontWeight="600"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_RightMsgTimeContact"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_RightContactName" />

                <TextView
                    android:id="@+id/tv_RightMsgTimeContact"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
