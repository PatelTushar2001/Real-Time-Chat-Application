        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cv_RightPdf"
            android:backgroundTint="@color/status_color"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitEnd"
            android:clickable="true"
            android:checkable="true"
            android:focusable="true"
            android:visibility="gone"
            app:cardCornerRadius="8dp"
            android:layout_marginEnd="22dp"
            android:layout_alignParentEnd="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/iv_Pdf"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentEnd="true"
                    android:scaleType="fitEnd"
                    android:src="@drawable/img_pdffile"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_RightPdfName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/inter"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/tv_RightMsgTimePdf"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_Pdf"
                    app:layout_constraintTop_toTopOf="@+id/iv_Pdf"
                    tools:text="Pdf Name" />

                <TextView
                    android:id="@+id/tv_RightMsgTimePdf"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end|bottom"
                    android:paddingEnd="12dp"
                    android:paddingBottom="8dp"
                    android:textColor="@color/black"
                    android:textFontWeight="300"
                    android:textSize="10sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@+id/tv_RightPdfName"
                    app:layout_constraintStart_toEndOf="@+id/iv_Pdf"
                    tools:text="11:30 pm" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

