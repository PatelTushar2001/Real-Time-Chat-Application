<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_SelectedContact"
        app:layout_constraintEnd_toEndOf="@+id/tv_SelectedContact"
        app:layout_constraintTop_toTopOf="@+id/tv_SelectedContact"
        app:srcCompat="@drawable/ic_close"
        android:layout_marginEnd="12dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/tv_SelectedContact"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="16dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/rounded_btn_bg"
        android:backgroundTint="@color/edt_bg"
        android:drawablePadding="12dp"
        android:fontFamily="@font/inter"
        android:lineHeight="22dp"
        android:paddingHorizontal="16dp"
        android:paddingVertical="8dp"
        android:paddingEnd="42dp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textFontWeight="400"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Hi, " />

</androidx.constraintlayout.widget.ConstraintLayout>