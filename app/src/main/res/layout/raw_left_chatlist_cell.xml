    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_LeftPdf"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/status_color"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitEnd"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cly_LeftPDF"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_Pdf"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentEnd="true"
                android:scaleType="fitEnd"
                android:src="@drawable/img_pdffile"
                android:visibility="visible"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_LeftPdfName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="12sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_LeftMsgTimePdf"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_Pdf"
                app:layout_constraintTop_toTopOf="@+id/iv_Pdf"
                tools:text="Pdf Name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_LeftMsgTimePdf"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end|bottom"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black"
                android:textFontWeight="300"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_LeftPdfName"
                app:layout_constraintStart_toEndOf="@+id/iv_Pdf"
                tools:text="11:30 pm" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_LeftContact"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:backgroundTint="@color/status_color"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitEnd"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_LeftContactName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginHorizontal="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Contact Name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_LeftViewAll"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter"
                android:gravity="center"
                android:maxLines="2"
                android:text="View All"
                android:textColor="@color/black"
                android:textFontWeight="600"
                android:textSize="16sp"
                app:layout_constraintBottom_toTopOf="@id/tv_LeftMsgTimeContact"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tv_LeftContactName" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_LeftMsgTimeContact"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black"
                android:textFontWeight="300"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="11:30 pm" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cv_LeftAudio"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true"
        android:backgroundTint="#DCDCDC"
        android:checkable="true"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="fitEnd"
        android:visibility="gone"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_LeftAudio"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentEnd="true"
                android:padding="16dp"
                android:scaleType="fitEnd"
                android:src="@drawable/ic_mp3"
                android:visibility="visible"
                app:layout_constraintBottom_toTopOf="@+id/tv_LeftMsgTimeAudio"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_LeftAudioName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:ellipsize="end"
                android:fontFamily="@font/inter"
                android:maxLines="2"
                android:textColor="@color/black"
                android:textFontWeight="400"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/tv_LeftMsgTimeAudio"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/iv_LeftAudio"
                app:layout_constraintTop_toTopOf="@+id/iv_LeftAudio"
                tools:text="Audio Fiscc fsc dfs fs sf ewfew le Name" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_LeftMsgTimeAudio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="end|bottom"
                android:paddingEnd="12dp"
                android:paddingBottom="8dp"
                android:textColor="@color/black"
                android:textFontWeight="300"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/tv_LeftAudioName"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="11:30 pm" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>